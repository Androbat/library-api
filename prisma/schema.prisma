generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String
  password String
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
  
}

model Category {
  id        String  @id @default(uuid())
  name      String
  products Product[]
  
}

model Stock {
  id       String @id @default(uuid())
  quantity Int
}
